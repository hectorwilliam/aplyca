@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;700;900&display=swap');
html, body 
  font-family: 'Roboto', sans-serif;

#app 
  font-family: 'Roboto', sans-serif;

body
    margin: 0;
    padding: 0;

h1
    font-weight: 900;

h2
    font-weight: 900;

h3
    font-weight: 700;

h4
    font-weight: 700;

h5
    font-weight: 400;

h6
    font-weight: 400;

p
    font-weight: 300;

span
    font-weight: 300;

.dashboardMenu
    background-color: #fff;
    width: 18%;
    display: inline-block;
    vertical-align top
    height 1250px
    .itemMenu
        padding 10px 20px
        img
            width 20px
            display inline-block 
            vertical-align middle
        h6
            display inline-block
            vertical-align middle
            margin 0
            font-size 18px
            font-weight 100
            padding-left 10px
        h2
            margin 30px 0 0 0
.rgba
    -webkit-box-shadow: 3px 3px 8px 0px rgba(0,0,0,0.36);
    -moz-box-shadow: 3px 3px 8px 0px rgba(0,0,0,0.36);
    box-shadow: 3px 3px 8px 0px rgba(0,0,0,0.36);
    
.dashboardContent
    width: 81%;
    display: inline-block;
    .dashboardContentPadding
        padding: 20px 50px
        .menu
            padding 10px 20px
            border-radius 5px
            div
            .widthMenu
                width 49%
                display inline-block
                vertical-align middle
            img
                width 25px
                display inline-block
                vertical-align middle
            h6
                display inline-block
                vertical-align middle
                margin 0
                font-size 18px
                margin-left 10px
                font-weight 100
            .circular
                width 40px
                height 40px
                background-size cover
                background-position center center
                border-radius 100px


.textRight
    text-align right

.styleContentTable
    background-color #fff
    border-radius 5px
    padding 15px
    margin-top 20px
    h5
        margin 0 0 10px 0
        font-weight 900
        font-size 20px
    .tableStyle
        border-spacing 0
        width 100%
        text-align left

        tbody tr:nth-child(odd)
            background-color #f6f6f6
        th
            color #ccc
            padding 10px
        td
            padding 10px
            button
                color #fff
                border none
                padding 4px 10px
                border-radius 5px
                font-weight  900
                cursor pointer
            .buttonMarcar
                background-color blue
            .buttonDelete
                background-color red
            a
                color blue

.styleForm
    padding 15px
    margin-top 20px
    border-radius 5px
    input
        width 21%
        padding 7px
        height 20px
        margin  0 5px 5px 0
    select
        width 21%
        padding 7px
        height 40px
    h5
        margin 0 0 10px 0
        font-weight 900
        font-size 20px
    button
        color #fff
        border none
        padding 4px 10px
        border-radius 5px
        font-weight  900
        cursor pointer
        background-color blue
        height 40px
    .addUser
        margin-bottom 20px

.styleLoginMain
    text-align center
    background-image url('https://i0.wp.com/hipertextual.com/wp-content/uploads/2013/04/Paris.jpg?fit=1024%2C685&ssl=1')
    background-size cover
    height 100vh
    .styleLogin
        background-color #fff
        display inline-block
        margin auto
        padding 30px
        border-radius 10px
        margin-top 30vh
        width auto
        input
            display block
            margin-bottom 20px
            height 50px
            padding 0 20px
            width 500px
            border-radius 10px
            border 1px solid #ccc 
        button
            color #fff
            border none
            padding 14px 10px
            border-radius 5px
            font-weight  900
            cursor pointer
            background-color blue

            width 100%